    <script>
        let user = localStorage.getItem("token")
        
        $(document).ready(function () {
        if (localStorage.getItem("token")) {
                alert(`${user}님 이미 로그인 되어있습니다.`);
                window.location.href = "/";
                return;
            }
        })
       
        function login() {
            let id = $('#id').val()
            let pw = $('#pw').val()
            // let pw2 = $('#pw2').val()
        
                $.ajax({
                    url: "/sign/login",
                    type: "post",
                    contentType: "application/json;charset=utf-8",
                    // data:JSON.stringify(
                        
                    data:JSON.stringify({
                            
                        id: id,
                        pw: pw,
                        // pw2: pw2
                    }),
                    success: function(res, status, xhr) {
                        if(res==="아이디를 입력해주세요"){
                           return alert(res)
                        }
                        if(res==="비밀번호를 입력해주세요"){
                            return alert(res)
                        }

                        //쿠키에 토큰 저장

                       
                        if(res) {
                            localStorage.setItem("token", res.token);
                            alert("로그인성공")
                            location.href = "/"}
                        // else{alert("로그인실패 아이디와 비밀번호를 확인해주세요.")}
                        
                    
                    }
                });
            }
        </script>
